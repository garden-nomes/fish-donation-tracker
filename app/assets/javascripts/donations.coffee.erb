bloodhound = new Bloodhound
    local: [<%= Donor.all.map { |d| "\"#{d.name}\"" }.join(",") %>],
    queryTokenizer: Bloodhound.tokenizers.whitespace,
    datumTokenizer: Bloodhound.tokenizers.whitespace

$ ->
    $ '#donation_donor'
        .typeahead
            hint: true,
            minLength: 1,
            highlight: true
        ,
            name: 'donors'
            source: bloodhound
